---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import CookieBanner from '../components/CookieBanner.astro';
import { t } from '../utils/i18n';
import '../styles/global.css';

const { title, description } = Astro.props || {};
const { currentLocale } = Astro;
---

<!doctype html>
<html lang={currentLocale}>
	<head>
		<meta charset='UTF-8' />
		<meta name='viewport' content='width=device-width, initial-scale=1' />
		<title>{title || t('default_title', currentLocale)}</title>
		<meta
			name='description'
			content={description || t('default_description', currentLocale)}
		/>

		<!-- Favicons -->
		<link rel='icon' type='image/x-icon' href='/images/favicon/favicon.ico' />
		<link
			rel='apple-touch-icon'
			sizes='180x180'
			href='/images/favicon/apple-touch-icon.png'
		/>
		<link
			rel='icon'
			type='image/png'
			sizes='32x32'
			href='/images/favicon/favicon-32x32.png'
		/>
		<link
			rel='icon'
			type='image/png'
			sizes='16x16'
			href='/images/favicon/favicon-16x16.png'
		/>
		<link rel='manifest' href='/images/favicon/site.webmanifest' />
	</head>
	<body>
		<CookieBanner />
		<Header />
		<main class='content-wrapper'>
			<slot />
		</main>
		<Footer />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		min-height: 100vh;
		font-family: var(--font-body, 'Roboto', sans-serif);
		background: var(--color-background);
		color: var(--color-dark, #343a40);
		display: flex;
		flex-direction: column;
	}

	.content-wrapper {
		flex: 1 0 auto;
		max-width: 1200px;
		margin: 0 auto;
		padding: 3rem 2rem;
		background: linear-gradient(135deg, #fff0f0 0%, #ffe5d9 70%, #fef9f8 100%);
		border-radius: var(--border-radius, 8px);
		box-shadow: 0 8px 24px rgba(197, 134, 123, 0.15);
		transition: background 0.3s ease;
	}

	@media (max-width: 768px) {
		.content-wrapper {
			padding: 2rem 1rem;
			min-height: calc(100vh - 120px);
		}
	}
</style>
