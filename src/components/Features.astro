---
import { t, setLocale } from '../utils/i18n';
const { currentLocale } = Astro;

setLocale(currentLocale);

// Define features using translations
const features = [
	{
		title: t('features.recipeManagement.title'),
		description: t('features.recipeManagement.description'),
		icon: '<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"/><polyline points="14 2 14 8 20 8"/><line x1="16" y1="13" x2="8" y2="13"/><line x1="16" y1="17" x2="8" y2="17"/><polyline points="10 9 9 9 8 9"/></svg>',
		color: 'from-orange-400 to-amber-500',
	},
	{
		title: t('features.weeklyPlanner.title'),
		description: t('features.weeklyPlanner.description'),
		icon: '<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="3" y="4" width="18" height="18" rx="2" ry="2"/><line x1="16" y1="2" x2="16" y2="6"/><line x1="8" y1="2" x2="8" y2="6"/><line x1="3" y1="10" x2="21" y2="10"/><path d="M8 14h.01"/><path d="M12 14h.01"/><path d="M16 14h.01"/><path d="M8 18h.01"/><path d="M12 18h.01"/><path d="M16 18h.01"/></svg>',
		color: 'from-emerald-400 to-teal-500',
	},
	{
		title: t('features.shoppingList.title'),
		description: t('features.shoppingList.description'),
		icon: '<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="9" cy="21" r="1"/><circle cx="20" cy="21" r="1"/><path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"/></svg>',
		color: 'from-blue-400 to-indigo-500',
	},
	{
		title: t('features.nutritionAnalysis.title'),
		description: t('features.nutritionAnalysis.description'),
		icon: '<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="18" y1="20" x2="18" y2="10"/><line x1="12" y1="20" x2="12" y2="4"/><line x1="6" y1="20" x2="6" y2="14"/></svg>',
		color: 'from-purple-400 to-violet-500',
	},
	{
		title: t('features.pantryInventory.title'),
		description: t('features.pantryInventory.description'),
		icon: '<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"/><polyline points="9 22 9 12 15 12 15 22"/></svg>',
		color: 'from-amber-400 to-orange-500',
	},
	{
		title: t('features.recipeImport.title'),
		description: t('features.recipeImport.description'),
		icon: '<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"/><polyline points="7 10 12 15 17 10"/><line x1="12" y1="15" x2="12" y2="3"/></svg>',
		color: 'from-rose-400 to-pink-500',
	},
];
---

<section id='features' class='features-section'>
	<div class='container'>
		<div class='features-header'>
			<span class='features-badge'
				>{t('features.badge', 'Caracter√≠sticas')}</span
			>
			<h2>{t('features.title')}</h2>
			<p>{t('features.subtitle')}</p>
		</div>
		<div class='features-grid'>
			{
				features.map((feature, index) => (
					<div
						class={`feature-card feature-${index + 1}`}
						style={`--animation-delay: ${index * 0.1}s;`}
					>
						<div class='feature-icon-wrapper'>
							<div
								class={`feature-icon-bg bg-gradient-to-br ${feature.color}`}
							/>
							<div class='feature-icon' set:html={feature.icon} />
						</div>
						<h3>{feature.title}</h3>
						<p>{feature.description}</p>
						<div class='feature-hover-line' />
					</div>
				))
			}
		</div>
	</div>

	<style>
		.features-section {
			padding: 100px 24px;
			background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%);
			position: relative;
			overflow: hidden;
		}

		.features-section::before {
			content: '';
			position: absolute;
			top: 0;
			left: 0;
			right: 0;
			height: 1px;
			background: linear-gradient(
				90deg,
				transparent,
				rgba(249, 115, 22, 0.3),
				transparent
			);
		}

		.container {
			max-width: 1200px;
			margin: 0 auto;
			position: relative;
			z-index: 1;
		}

		.features-header {
			text-align: center;
			margin-bottom: 80px;
		}

		.features-badge {
			display: inline-block;
			background: linear-gradient(135deg, #f97316, #ea580c);
			color: white;
			padding: 8px 20px;
			border-radius: 50px;
			font-size: 14px;
			font-weight: 600;
			letter-spacing: 0.5px;
			margin-bottom: 24px;
			animation: fadeInUp 0.6s ease-out;
		}

		.features-header h2 {
			font-size: 48px;
			font-weight: 800;
			margin-bottom: 20px;
			background: linear-gradient(135deg, #1f2937, #374151);
			-webkit-background-clip: text;
			-webkit-text-fill-color: transparent;
			background-clip: text;
			animation: fadeInUp 0.6s ease-out 0.1s both;
		}

		.features-header p {
			font-size: 18px;
			color: #6b7280;
			max-width: 600px;
			margin: 0 auto;
			line-height: 1.6;
			animation: fadeInUp 0.6s ease-out 0.2s both;
		}

		.features-grid {
			display: grid;
			grid-template-columns: 1fr;
			gap: 32px;
		}

		@media (min-width: 768px) {
			.features-grid {
				grid-template-columns: repeat(2, 1fr);
			}
		}

		@media (min-width: 1024px) {
			.features-grid {
				grid-template-columns: repeat(3, 1fr);
			}
		}

		.feature-card {
			background: white;
			border-radius: 20px;
			padding: 40px 32px;
			transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
			position: relative;
			overflow: hidden;
			border: 1px solid rgba(0, 0, 0, 0.05);
			box-shadow: 0 4px 20px rgba(0, 0, 0, 0.04);
			opacity: 0;
			transform: translateY(30px);
			animation: fadeInUp 0.6s ease-out var(--animation-delay) forwards;
		}

		.feature-card:hover {
			transform: translateY(-8px);
			box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
			border-color: rgba(249, 115, 22, 0.2);
		}

		.feature-icon-wrapper {
			position: relative;
			width: 80px;
			height: 80px;
			margin-bottom: 32px;
		}

		.feature-icon-bg {
			position: absolute;
			width: 100%;
			height: 100%;
			border-radius: 20px;
			opacity: 0.1;
			transition: all 0.4s ease;
		}

		.feature-card:hover .feature-icon-bg {
			opacity: 0.15;
			transform: scale(1.05);
		}

		.feature-icon {
			position: relative;
			width: 100%;
			height: 100%;
			display: flex;
			align-items: center;
			justify-content: center;
			color: #1f2937;
		}

		.feature-icon svg {
			width: 32px;
			height: 32px;
			stroke-width: 1.5;
		}

		.feature-card h3 {
			font-size: 22px;
			font-weight: 700;
			margin-bottom: 16px;
			color: #1f2937;
			position: relative;
			z-index: 1;
		}

		.feature-card p {
			font-size: 16px;
			color: #6b7280;
			margin: 0;
			line-height: 1.7;
			position: relative;
			z-index: 1;
		}

		.feature-hover-line {
			position: absolute;
			bottom: 0;
			left: 0;
			width: 100%;
			height: 3px;
			background: linear-gradient(90deg, #f97316, #ea580c);
			transform: scaleX(0);
			transform-origin: left;
			transition: transform 0.4s ease;
		}

		.feature-card:hover .feature-hover-line {
			transform: scaleX(1);
		}

		/* Animations */
		@keyframes fadeInUp {
			from {
				opacity: 0;
				transform: translateY(30px);
			}
			to {
				opacity: 1;
				transform: translateY(0);
			}
		}

		@keyframes float {
			0%,
			100% {
				transform: translateY(0);
			}
			50% {
				transform: translateY(-10px);
			}
		}

		/* Stagger animations for each card */
		.feature-1 {
			animation-delay: 0.1s;
		}
		.feature-2 {
			animation-delay: 0.2s;
		}
		.feature-3 {
			animation-delay: 0.3s;
		}
		.feature-4 {
			animation-delay: 0.4s;
		}
		.feature-5 {
			animation-delay: 0.5s;
		}
		.feature-6 {
			animation-delay: 0.6s;
		}

		/* Add subtle floating animation on hover for icons */
		.feature-card:hover .feature-icon {
			animation: float 2s ease-in-out infinite;
		}
	</style>
</section>
