---
import { t } from '../utils/i18n';

const { currentLocale } = Astro;
---

<section class='hero'>
	<video autoplay loop muted playsinline class='hero-video'>
		<source src='./hero.mp4' type='video/mp4' />
		Your browser does not support the video tag.
	</video>

	<div class='container'>
		<h1>{t('hero.title', currentLocale)}</h1>
		<p>{t('hero.subtitle', currentLocale)}</p>
		<a
			href={`/${currentLocale === 'es' ? '' : 'en'}/recipes`}
			class='cta-button'
		>
			{t('hero.cta', currentLocale)}
		</a>
	</div>
</section>

<!-- Keep your existing styles -->

<style>
	.hero {
		position: relative;
		height: 60vh;
		display: flex;
		align-items: center;
		justify-content: center;
		text-align: center;
		color: var(--text);
		overflow: hidden;
		padding: 0 1rem; /* add horizontal padding for small screens */
	}

	.hero-video {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		object-fit: cover;
		box-sizing: border-box;
		border: 8px solid var(--color-primary);
		border-radius: 8px;
	}

	.container {
		position: relative;
		z-index: 1;
		background: rgba(0, 0, 0, 0.7); /* Semi-transparent black */
		padding: 2rem;
		border-radius: 8px;
		color: white;
		max-width: 600px;
		margin: 0 auto;
	}

	.container p {
		margin: 1.5rem 4rem; /* reduce spacing below paragraph */
		padding: 1rem 4rem;
		font-size: 1.15rem;
	}

	.cta-button {
		background-color: var(--color-primary);
		color: var(--color-light);
		border-radius: var(--border-radius);
		margin: 0 auto;
		padding: 1rem 2rem;
		font-size: 1.2rem;
		text-decoration: none;
		display: inline-block;
	}

	/* Responsive tweaks */
	@media (max-width: 600px) {
		.hero {
			height: 40vh;
		}

		.container {
			padding: 1rem;
			max-width: 90%;
		}

		.container p {
			margin-bottom: 1rem;
		}

		.cta-button {
			font-size: 1rem;
			padding: 0.75rem 1.5rem;
		}
	}
</style>
