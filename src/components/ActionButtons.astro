---
// src/components/ActionButtons.astro
interface Props {
	variant?: 'primary' | 'secondary' | 'accent';
}

const { variant = 'primary' } = Astro.props;
---

<div class='action-buttons'>
	<a href='/' class='action-button home-button'>
		<svg width='20' height='20' viewBox='0 0 24 24' fill='none'>
			<path
				d='M3 9L12 2L21 9V20C21 20.5304 20.7893 21.0391 20.4142 21.4142C20.0391 21.7893 19.5304 22 19 22H5C4.46957 22 3.96086 21.7893 3.58579 21.4142C3.21071 21.0391 3 20.5304 3 20V9Z'
				stroke='currentColor'
				stroke-width='2'></path>
			<path d='M9 22V12H15V22' stroke='currentColor' stroke-width='2'></path>
		</svg>
		Home Kitchen
	</a>

	<a href='/recipes' class='action-button recipes-button'>
		<svg width='20' height='20' viewBox='0 0 24 24' fill='none'>
			<path
				d='M12 6.25278V19.2528M12 6.25278C10.8321 5.47686 9.24649 5 7.5 5C5.75351 5 4.16789 5.47686 3 6.25278V19.2528C4.16789 18.4769 5.75351 18 7.5 18C9.24649 18 10.8321 18.4769 12 19.2528'
				stroke='currentColor'
				stroke-width='2'></path>
		</svg>
		All Recipes
	</a>

	<a href='/submit' class='action-button submit-button'>
		<svg width='20' height='20' viewBox='0 0 24 24' fill='none'>
			<path
				d='M12 5V19M5 12H19'
				stroke='currentColor'
				stroke-width='2'
				stroke-linecap='round'></path>
		</svg>
		Submit Recipe
	</a>
</div>

<style>
	.action-buttons {
		display: flex;
		gap: var(--space-lg);
		justify-content: center;
		margin: var(--space-2xl) 0;
		flex-wrap: wrap;
	}

	.action-button {
		display: inline-flex;
		align-items: center;
		justify-content: center;
		gap: var(--space-sm);
		padding: var(--space-lg) var(--space-xl);
		border-radius: var(--radius-xl);
		font-family: var(--font-heading);
		font-weight: 600;
		text-decoration: none;
		transition: all var(--transition-medium) var(--animation-timing);
		border: 2px solid transparent;
		font-size: var(--text-base);
		min-width: 180px;
		position: relative;
		overflow: hidden;
	}

	.action-button::before {
		content: '';
		position: absolute;
		top: 0;
		left: -100%;
		width: 100%;
		height: 100%;
		background: linear-gradient(
			90deg,
			transparent,
			rgba(255, 255, 255, 0.2),
			transparent
		);
		transition: left 0.7s ease;
	}

	.action-button:hover::before {
		left: 100%;
	}

	.home-button {
		background: linear-gradient(
			135deg,
			var(--color-primary),
			var(--color-svg-accent)
		);
		color: white;
		box-shadow: 0 8px 25px rgba(193, 78, 57, 0.3);
	}

	.recipes-button {
		background: transparent;
		color: var(--color-secondary);
		border-color: var(--color-secondary);
		border-width: 2px;
	}

	.submit-button {
		background: linear-gradient(
			135deg,
			var(--color-svg-fresh),
			var(--color-svg-herb)
		);
		color: white;
		box-shadow: 0 8px 25px rgba(143, 183, 71, 0.3);
	}

	.action-button:hover {
		transform: translateY(-4px);
		box-shadow: var(--shadow-xl);
	}

	.home-button:hover {
		background: linear-gradient(
			135deg,
			var(--color-svg-accent),
			var(--color-primary)
		);
	}

	.recipes-button:hover {
		background: color-mix(in srgb, var(--color-secondary) 10%, transparent);
		border-color: var(--color-primary);
		color: var(--color-primary);
	}

	.submit-button:hover {
		background: linear-gradient(
			135deg,
			var(--color-svg-herb),
			var(--color-svg-fresh)
		);
	}

	.action-button svg {
		transition: transform var(--transition-medium);
	}

	.action-button:hover svg {
		transform: translateX(3px);
	}

	@media (max-width: 768px) {
		.action-buttons {
			flex-direction: column;
			align-items: center;
			gap: var(--space-md);
		}

		.action-button {
			width: 100%;
			max-width: 300px;
			justify-content: center;
		}
	}
</style>
