---
import Navbar from './Navbar.astro';
import Logo from './Logo.astro';
import LanguageSelector from './LanguageSelector.astro';
import { t } from '../utils/i18n';

const { currentLocale } = Astro;
---

<header class='header'>
	<div class='header-container'>
		<!-- Section: Main header row with logo and title -->
		<div class='header-main'>
			<div>
				<Logo />
			</div>
			<div class='header-title-wrapper'>
				<h1 class='blog-title'>{t('title', currentLocale)}</h1>
				<p class='blog-tagline'>
					{
						t('subtitle', currentLocale) ||
							'Delicious recipes from around the world'
					}
				</p>
			</div>
		</div>

		<!-- Section: Right side controls -->
		<div class='header-controls'>
			<!-- Mobile Menu Toggle (Hamburger) -->
			<button
				class='mobile-menu-toggle'
				id='mobile-menu-toggle'
				aria-label='Toggle menu'
			>
				<span class='hamburger-line'></span>
				<span class='hamburger-line'></span>
				<span class='hamburger-line'></span>
			</button>

			<div class='header-actions'>
				<LanguageSelector />
				<button
					class='theme-toggle'
					id='theme-toggle'
					aria-label='Toggle dark mode'
				>
					Dark/Light
				</button>
			</div>

			<!-- Section: Search bar -->
			<div class='header-search'>
				<div class='search-wrapper'>
					<svg
						class='search-icon'
						width='18'
						height='18'
						viewBox='0 0 24 24'
						fill='none'
						stroke='currentColor'
						stroke-width='2'
					>
						<circle cx='11' cy='11' r='8'></circle>
						<path d='m21 21-4.35-4.35'></path>
					</svg>
					<input
						type='search'
						class='search-input'
						placeholder={t('search.placeholder', currentLocale) ||
							'Search recipes...'}
						aria-label='Search recipes'
					/>
				</div>
			</div>
		</div>
	</div>

	<!-- Section: Navigation below header -->
	<div class='header-nav' id='header-nav'>
		<Navbar />
	</div>
</header>

<script is:inline>
	// Theme toggle functionality
	const themeToggle = document.getElementById('theme-toggle');
	const prefersDark = window.matchMedia('(prefers-color-scheme: dark)');

	function setTheme(theme) {
		document.documentElement.setAttribute('data-theme', theme);
		localStorage.setItem('theme', theme);
		themeToggle.textContent = theme === 'dark' ? 'Light' : 'Dark';
	}

	function toggleTheme() {
		const current = document.documentElement.getAttribute('data-theme');
		const newTheme = current === 'dark' ? 'light' : 'dark';
		setTheme(newTheme);
	}

	// Initialize theme
	const savedTheme = localStorage.getItem('theme');
	if (savedTheme) {
		setTheme(savedTheme);
	} else if (prefersDark.matches) {
		setTheme('dark');
	} else {
		// Initial text for light theme
	}

	themeToggle?.addEventListener('click', toggleTheme);

	// Mobile menu toggle functionality
	const mobileMenuToggle = document.getElementById('mobile-menu-toggle');
	const headerNav = document.getElementById('header-nav');

	function toggleMobileMenu() {
		const isExpanded =
			mobileMenuToggle.getAttribute('aria-expanded') === 'true';
		mobileMenuToggle.setAttribute('aria-expanded', !isExpanded);
		headerNav.classList.toggle('mobile-menu-active');
		document.body.classList.toggle('mobile-menu-open');
	}

	function closeMobileMenu() {
		mobileMenuToggle.setAttribute('aria-expanded', 'false');
		headerNav.classList.remove('mobile-menu-active');
		document.body.classList.remove('mobile-menu-open');
	}

	// Initialize mobile menu
	mobileMenuToggle?.setAttribute('aria-expanded', 'false');
	mobileMenuToggle?.addEventListener('click', toggleMobileMenu);

	// Close mobile menu when clicking on a nav link
	document.querySelectorAll('#header-nav a').forEach((link) => {
		link.addEventListener('click', closeMobileMenu);
	});

	// Close mobile menu when clicking outside
	document.addEventListener('click', (event) => {
		const isClickInsideNav = headerNav?.contains(event.target);
		const isClickOnToggle = mobileMenuToggle?.contains(event.target);

		if (
			!isClickInsideNav &&
			!isClickOnToggle &&
			headerNav?.classList.contains('mobile-menu-active')
		) {
			closeMobileMenu();
		}
	});

	// Close mobile menu on escape key
	document.addEventListener('keydown', (event) => {
		if (
			event.key === 'Escape' &&
			headerNav?.classList.contains('mobile-menu-active')
		) {
			closeMobileMenu();
		}
	});

	// Close mobile menu on resize (if resizing to desktop)
	window.addEventListener('resize', () => {
		if (
			window.innerWidth > 767 &&
			headerNav?.classList.contains('mobile-menu-active')
		) {
			closeMobileMenu();
		}
	});
</script>

<style>
	/* Section: Header Base */
	.header {
		background: linear-gradient(
			135deg,
			var(--color-svg-accent),
			var(--color-primary)
		);
		color: white;
		padding: var(--space-md) 0 0 0;
		box-shadow: var(--shadow-lg);
		position: relative;
		z-index: 100;
	}

	/* Section: Header Container */
	.header-container {
		display: flex;
		flex-direction: column;
		gap: var(--space-xl);
		padding: 0 var(--space-md);
		margin: 0 auto;
		max-width: 1200px;
	}

	/* Section: Main Header Row */
	.header-main {
		display: flex;
		align-items: center;
		gap: var(--space-xl);
		flex-wrap: nowrap;
	}

	/* Logo sizing */
	.header-main :global(.logo) {
		flex-shrink: 0;
		width: 60px;
		height: 60px;
	}

	/* Section: Title Wrapper */
	.header-title-wrapper {
		flex: 1;
		min-width: 0; /* Prevents overflow */
	}

	.blog-title {
		font-size: var(--text-2xl);
		font-weight: 800;
		margin: 0;
		line-height: 1.2;
		background: linear-gradient(135deg, #ffffff, var(--color-svg-cream));
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
		overflow: hidden;
		text-overflow: ellipsis;
		white-space: nowrap;
	}

	.blog-tagline {
		font-size: var(--text-sm);
		margin: var(--space-2xs) 0 0 0;
		opacity: 0.9;
		font-weight: 400;
		overflow: hidden;
		text-overflow: ellipsis;
		white-space: nowrap;
	}

	/* Section: Header Controls */
	.header-controls {
		display: flex;
		flex-direction: column;
		gap: var(--space-md);
	}

	/* Section: Header Actions Row */
	.header-actions {
		display: flex;
		align-items: center;
		justify-content: flex-end;
		gap: var(--space-sm);
	}

	/* Mobile Menu Toggle (Hamburger) */
	.mobile-menu-toggle {
		display: none; /* Hidden by default, shown on mobile */
		background: none;
		border: none;
		padding: 0.5rem;
		cursor: pointer;
		flex-direction: column;
		justify-content: space-between;
		width: 30px;
		height: 24px;
		position: relative;
		z-index: 101;
	}

	.hamburger-line {
		display: block;
		width: 100%;
		height: 3px;
		background-color: white;
		border-radius: 3px;
		transition: all 0.3s ease;
	}

	.mobile-menu-toggle[aria-expanded='true'] .hamburger-line:nth-child(1) {
		transform: translateY(7px) rotate(45deg);
	}

	.mobile-menu-toggle[aria-expanded='true'] .hamburger-line:nth-child(2) {
		opacity: 0;
	}

	.mobile-menu-toggle[aria-expanded='true'] .hamburger-line:nth-child(3) {
		transform: translateY(-7px) rotate(-45deg);
	}

	.mobile-menu-toggle:hover .hamburger-line {
		background-color: var(--color-svg-cream);
	}

	/* Theme Toggle Button */
	.theme-toggle {
		background: var(--color-svg-accent); /* Dark red */
		color: white;
		border: 2px solid white;
		border-radius: 20px;
		padding: 8px 16px;
		font-weight: 600;
		cursor: pointer;
		transition: all 0.3s ease;
		min-width: 80px;
	}

	/* When dark theme is active */
	[data-theme='dark'] .theme-toggle {
		background: var(--color-svg-dark); /* Dark gray */
		color: var(--color-svg-cream); /* Peach text */
		border: 2px solid var(--color-svg-warm); /* Red border */
	}

	.theme-toggle:hover {
		background: white;
		color: var(--color-svg-accent);
		transform: scale(1.05);
	}

	/* Section: Search Bar */
	.header-search {
		width: 100%;
	}

	.search-wrapper {
		position: relative;
		max-width: 500px;
		margin-left: auto;
	}

	.search-icon {
		position: absolute;
		left: var(--space-md);
		top: 50%;
		transform: translateY(-50%);
		color: var(--color-text-light);
		pointer-events: none;
	}

	.search-input {
		width: 100%;
		padding: var(--space-sm) var(--space-md) var(--space-sm)
			calc(var(--space-md) * 2 + 18px);
		background: rgba(255, 255, 255, 0.9);
		border: 2px solid rgba(255, 255, 255, 0.3);
		border-radius: var(--radius-full);
		font-size: var(--text-base);
		color: var(--color-text);
		transition: all 0.2s ease;
	}

	.search-input:focus {
		background: white;
		border-color: white;
		box-shadow: 0 0 0 3px rgba(255, 255, 255, 0.3);
		outline: none;
	}

	.search-input::placeholder {
		color: var(--color-text-light);
		opacity: 0.7;
	}

	.header-nav {
		margin-top: var(--space-2xs);
		padding: var(--space-sm);
		background: var(--color-primary);
		transition: all 0.3s ease;
	}

	/* Prevent body scroll when mobile menu is open */
	body.mobile-menu-open {
		overflow: hidden;
	}

	/* Section: Responsive Design */
	@media (min-width: 768px) {
		.header-container {
			flex-direction: row;
			align-items: center;
			justify-content: space-between;
			gap: var(--space-xl);
			padding: 0 var(--space-xl);
		}

		.header-controls {
			flex-direction: column;
			align-items: flex-end;
			flex-shrink: 0;
			min-width: 300px;
		}

		.header-actions {
			order: 2;
		}

		.header-search {
			order: 1;
		}

		.blog-title {
			font-size: var(--text-3xl);
			white-space: normal;
		}

		.blog-tagline {
			white-space: normal;
		}
	}

	/* MOBILE STYLES - Dropdown menu */
	@media (max-width: 767px) {
		/* Show hamburger menu toggle */
		.mobile-menu-toggle {
			display: flex;
		}

		.header {
			padding: 0.75rem 0 0 0;
		}

		.header-container {
			padding: 0 1rem;
			gap: 1rem;
			flex-direction: row;
			justify-content: space-between;
			align-items: center;
		}

		/* Logo and title side by side */
		.header-main {
			flex-direction: row;
			align-items: center;
			justify-content: flex-start;
			gap: 0.75rem;
			text-align: left;
			flex-wrap: nowrap;
			flex: 1;
		}

		.header-main :global(.logo) {
			width: 45px;
			height: 45px;
			flex-shrink: 0;
		}

		.header-title-wrapper {
			flex: 1;
			min-width: 0;
			text-align: left;
		}

		.blog-title {
			font-size: 1.1rem;
			white-space: nowrap;
			overflow: hidden;
			text-overflow: ellipsis;
			line-height: 1.2;
		}

		/* HIDE subtitle on mobile */
		.blog-tagline {
			display: none;
		}

		/* Compact controls layout */
		.header-controls {
			width: auto;
			flex-direction: row;
			align-items: center;
			gap: 0.75rem;
			margin: 0;
		}

		/* Hide header actions and search on mobile by default */
		.header-actions,
		.header-search {
			display: none;
		}

		/* Mobile menu styles */
		.header-nav {
			position: fixed;
			top: 0;
			left: 0;
			right: 0;
			bottom: 0;
			background: rgba(0, 0, 0, 0.9);
			backdrop-filter: blur(10px);
			margin-top: 0;
			padding: 5rem 1rem 2rem;
			transform: translateY(-100%);
			opacity: 0;
			visibility: hidden;
			overflow-y: auto;
			z-index: 99;
		}

		.header-nav.mobile-menu-active {
			transform: translateY(0);
			opacity: 1;
			visibility: visible;
		}

		/* Style for nav items in mobile menu */
		.header-nav :global(nav) {
			display: flex;
			flex-direction: column;
			gap: 1.5rem;
			align-items: center;
			justify-content: center;
			height: 100%;
		}

		.header-nav :global(nav ul) {
			flex-direction: column;
			gap: 1.5rem;
			width: 100%;
			max-width: 300px;
			margin: 0 auto;
		}

		.header-nav :global(nav li) {
			width: 100%;
			text-align: center;
		}

		.header-nav :global(nav a) {
			display: block;
			padding: 1rem;
			font-size: 1.2rem;
			color: white;
			background: rgba(255, 255, 255, 0.1);
			border-radius: 8px;
			transition: all 0.3s ease;
		}

		.header-nav :global(nav a:hover) {
			background: rgba(255, 255, 255, 0.2);
			transform: translateX(5px);
		}

		/* Show search and theme toggle inside mobile menu */
		.header-nav.mobile-menu-active .header-search,
		.header-nav.mobile-menu-active .header-actions {
			display: flex;
			width: 100%;
			max-width: 300px;
			margin: 2rem auto 0;
		}

		.header-nav.mobile-menu-active .header-actions {
			justify-content: center;
			gap: 1rem;
		}

		.header-nav.mobile-menu-active .search-wrapper {
			margin: 0 auto;
			width: 100%;
		}

		.header-nav.mobile-menu-active .search-input {
			background: rgba(255, 255, 255, 0.95);
			border-color: rgba(255, 255, 255, 0.5);
		}

		/* Move hamburger to top right when menu is open */
		.mobile-menu-toggle[aria-expanded='true'] {
			position: fixed;
			top: 1rem;
			right: 1rem;
		}
	}

	/* Extra small screens */
	@media (max-width: 480px) {
		.header-main :global(.logo) {
			width: 40px;
			height: 40px;
		}

		.blog-title {
			font-size: 1rem;
		}

		.mobile-menu-toggle {
			width: 28px;
			height: 22px;
		}

		.header-nav :global(nav a) {
			font-size: 1.1rem;
			padding: 0.875rem;
		}
	}
</style>
