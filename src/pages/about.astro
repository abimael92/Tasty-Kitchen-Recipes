---
import BaseLayout from '../layouts/BaseLayout.astro';
import { t } from '../utils/i18n.js';

const { currentLocale } = Astro.params;
---

<BaseLayout title={t('about.title', currentLocale)}>
	<div class='about-container'>
		<!-- Hero Section -->
		<section class='hero-section'>
			<div class='hero-content'>
				<h1 class='hero-title'>{t('about.heroTitle', currentLocale)}</h1>
				<p class='hero-subtitle'>{t('about.heroSubtitle', currentLocale)}</p>
			</div>
		</section>

		<!-- Mission & Vision -->
		<section class='mission-section'>
			<div class='mission-grid'>
				<div class='mission-card'>
					<div class='mission-icon'>
						<svg
							xmlns='http://www.w3.org/2000/svg'
							viewBox='0 0 24 24'
							fill='currentColor'
						>
							<path d='M12 2L2 7l10 5 10-5-10-5zM2 17l10 5 10-5M2 12l10 5 10-5'
							></path>
						</svg>
					</div>
					<h2>{t('about.missionTitle', currentLocale)}</h2>
					<p>{t('about.missionText', currentLocale)}</p>
				</div>
				<div class='mission-card'>
					<div class='mission-icon'>
						<svg
							xmlns='http://www.w3.org/2000/svg'
							viewBox='0 0 24 24'
							fill='currentColor'
