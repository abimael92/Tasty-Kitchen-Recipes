<style>
	/* Base Styles */
	.about-container {
		max-width: 1200px;
		margin: 0 auto;
		padding: 0 1rem;
	}

	/* Hero Section */
	.hero-section {
		text-align: center;
		padding: 3rem 1rem;
		background: linear-gradient(
			135deg,
			var(--primary-color) 0%,
			var(--secondary-color) 100%
		);
		border-radius: 12px;
		margin: 1rem 0;
		color: white;
	}

	.hero-title {
		font-size: 2.5rem;
		font-weight: 700;
		margin-bottom: 1rem;
	}

	.hero-subtitle {
		font-size: 1.1rem;
		max-width: 600px;
		margin: 0 auto;
		line-height: 1.6;
		opacity: 0.9;
	}

	/* Mission Section */
	.mission-section {
		padding: 3rem 0;
	}

	.mission-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
		gap: 2rem;
		margin-top: 2rem;
	}

	.mission-card {
		background: white;
		padding: 2rem;
		border-radius: 12px;
		box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
		border: 1px solid var(--border-color);
		text-align: center;
	}

	.mission-icon {
		width: 48px;
		height: 48px;
		margin: 0 auto 1rem;
		color: var(--primary-color);
	}

	.mission-card h2 {
		font-size: 1.5rem;
		color: var(--text-color);
		margin-bottom: 1rem;
	}

	.mission-card p {
		color: var(--text-color);
		line-height: 1.6;
		opacity: 0.8;
	}

	/* Offerings Section */
	.offerings-section {
		padding: 3rem 0;
		background: var(--light-bg);
		border-radius: 12px;
		margin: 2rem 0;
	}

	.section-title {
		font-size: 2rem;
		color: var(--text-color);
		text-align: center;
		margin-bottom: 2rem;
		font-weight: 600;
	}

	.offerings-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
		gap: 1.5rem;
	}

	.offering-card {
		background: white;
		padding: 1.5rem;
		border-radius: 8px;
		border: 1px solid var(--border-color);
	}

	.offering-card h3 {
		color: var(--primary-color);
		font-size: 1.2rem;
		margin-bottom: 1rem;
	}

	.offering-card ul {
		list-style: none;
		padding: 0;
	}

	.offering-card li {
		padding: 0.5rem 0;
		color: var(--text-color);
		position: relative;
		padding-left: 1.5rem;
	}

	.offering-card li::before {
		content: 'â€¢';
		color: var(--secondary-color);
		position: absolute;
		left: 0;
		font-size: 1.2rem;
	}

	/* Features Section */
	.features-section {
		padding: 3rem 0;
	}

	.features-list {
		max-width: 800px;
		margin: 0 auto;
	}

	.feature-item {
		display: flex;
		gap: 1rem;
		padding: 1.5rem;
		background: white;
		border-radius: 8px;
		margin-bottom: 1rem;
		border: 1px solid var(--border-color);
		align-items: flex-start;
	}

	.feature-icon {
		width: 24px;
		height: 24px;
		color: var(--primary-color);
		flex-shrink: 0;
	}

	.feature-item h3 {
		color: var(--text-color);
		margin-bottom: 0.5rem;
		font-size: 1.1rem;
	}

	.feature-item p {
		color: var(--text-color);
		line-height: 1.5;
		opacity: 0.8;
	}

	/* Community Section */
	.community-section {
		padding: 3rem 1rem;
		background: var(--text-color);
		border-radius: 12px;
		margin: 2rem 0;
		text-align: center;
		color: white;
	}

	.community-section h2 {
		font-size: 2rem;
		margin-bottom: 1rem;
	}

	.community-section p {
		max-width: 600px;
		margin: 0 auto 2rem;
		line-height: 1.6;
		opacity: 0.9;
	}

	.community-stats {
		display: flex;
		justify-content: center;
		gap: 2rem;
		flex-wrap: wrap;
		margin: 2rem 0;
	}

	.stat-item {
		display: flex;
		flex-direction: column;
		align-items: center;
	}

	.stat-number {
		font-size: 2rem;
		font-weight: 700;
		color: var(--primary-color);
	}

	.stat-label {
		font-size: 0.9rem;
		opacity: 0.8;
		margin-top: 0.5rem;
	}

	.cta-buttons {
		display: flex;
		gap: 1rem;
		justify-content: center;
		flex-wrap: wrap;
		margin-top: 2rem;
	}

	.btn {
		padding: 0.75rem 2rem;
		border-radius: 4px;
		font-weight: 600;
		text-decoration: none;
		transition: all 0.2s ease;
	}

	.btn.primary {
		background: var(--primary-color);
		color: white;
	}

	.btn.primary:hover {
		background: var(--secondary-color);
	}

	.btn.secondary {
		background: transparent;
		color: white;
		border: 2px solid white;
	}

	.btn.secondary:hover {
		background: rgba(255, 255, 255, 0.1);
