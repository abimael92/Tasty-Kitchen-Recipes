---
import BaseLayout from '../layouts/BaseLayout.astro';
import { t } from '../utils/i18n.js';

const { currentLocale } = Astro.params;
---

<BaseLayout title={t('about.title', currentLocale)}>
	<div class='about-container'>
		<!-- Hero Section -->
		<section class='hero-section'>
			<div class='hero-content'>
				<h1 class='hero-title'>{t('about.heroTitle', currentLocale)}</h1>
				<p class='hero-subtitle'>{t('about.heroSubtitle', currentLocale)}</p>
			</div>
		</section>

		<!-- Mission & Vision -->
		<section class='mission-section'>
			<div class='mission-grid'>
				<div class='mission-card'>
					<div class='mission-icon'>
						<svg
							xmlns='http://www.w3.org/2000/svg'
							viewBox='0 0 24 24'
							fill='currentColor'
						>
							<path d='M12 2L2 7l10 5 10-5-10-5zM2 17l10 5 10-5M2 12l10 5 10-5'
							></path>
						</svg>
					</div>
					<h2>{t('about.missionTitle', currentLocale)}</h2>
					<p>{t('about.missionText', currentLocale)}</p>
				</div>
				<div class='mission-card'>
					<div class='mission-icon'>
						<svg
							xmlns='http://www.w3.org/2000/svg'
							viewBox='0 0 24 24'
							fill='currentColor'
						>
							<path
								d='M12 2a10 10 0 110 20 10 10 0 010-20zm0 2a8 8 0 100 16 8 8 0 000-16zm-1 3h2v6h-2V7zm0 8h2v2h-2v-2z'
							></path>
						</svg>
					</div>
					<h2>{t('about.visionTitle', currentLocale)}</h2>
					<p>{t('about.visionText', currentLocale)}</p>
				</div>
			</div>
		</section>

		<!-- What We Offer -->
		<section class='offerings-section'>
			<h2 class='section-title'>{t('about.offeringsTitle', currentLocale)}</h2>
			<div class='offerings-grid'>
				<div class='offering-card'>
					<h3>{t('about.offering1Title', currentLocale)}</h3>
					<ul>
						<li>{t('about.offering1Item1', currentLocale)}</li>
						<li>{t('about.offering1Item2', currentLocale)}</li>
						<li>{t('about.offering1Item3', currentLocale)}</li>
						<li>{t('about.offering1Item4', currentLocale)}</li>
					</ul>
				</div>

				<div class='offering-card'>
					<h3>{t('about.offering2Title', currentLocale)}</h3>
					<ul>
						<li>{t('about.offering2Item1', currentLocale)}</li>
						<li>{t('about.offering2Item2', currentLocale)}</li>
						<li>{t('about.offering2Item3', currentLocale)}</li>
						<li>{t('about.offering2Item4', currentLocale)}</li>
					</ul>
				</div>

				<div class='offering-card'>
					<h3>{t('about.offering3Title', currentLocale)}</h3>
					<ul>
						<li>{t('about.offering3Item1', currentLocale)}</li>
						<li>{t('about.offering3Item2', currentLocale)}</li>
						<li>{t('about.offering3Item3', currentLocale)}</li>
						<li>{t('about.offering3Item4', currentLocale)}</li>
					</ul>
				</div>

				<div class='offering-card'>
					<h3>{t('about.offering4Title', currentLocale)}</h3>
					<ul>
						<li>{t('about.offering4Item1', currentLocale)}</li>
						<li>{t('about.offering4Item2', currentLocale)}</li>
						<li>{t('about.offering4Item3', currentLocale)}</li>
						<li>{t('about.offering4Item4', currentLocale)}</li>
					</ul>
				</div>
			</div>
		</section>

		<!-- Features -->
		<section class='features-section'>
			<h2 class='section-title'>{t('about.featuresTitle', currentLocale)}</h2>
			<div class='features-list'>
				<div class='feature-item'>
					<span class='feature-icon'>
						<svg
							xmlns='http://www.w3.org/2000/svg'
							viewBox='0 0 24 24'
							fill='currentColor'
						>
							<path d='M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z'></path>
						</svg>
					</span>
					<div>
						<h3>{t('about.feature1Title', currentLocale)}</h3>
						<p>{t('about.feature1Text', currentLocale)}</p>
					</div>
				</div>

				<div class='feature-item'>
					<span class='feature-icon'>
						<svg
							xmlns='http://www.w3.org/2000/svg'
							viewBox='0 0 24 24'
							fill='currentColor'
						>
							<path d='M10 18h4v-2h-4v2zM3 6v2h18V6H3zm3 7h12v-2H6v2z'></path>
						</svg>
					</span>
					<div>
						<h3>{t('about.feature2Title', currentLocale)}</h3>
						<p>{t('about.feature2Text', currentLocale)}</p>
					</div>
				</div>

				<div class='feature-item'>
					<span class='feature-icon'>
						<svg
							xmlns='http://www.w3.org/2000/svg'
							viewBox='0 0 24 24'
							fill='currentColor'
						>
							<path
								d='M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z'
							></path>
						</svg>
					</span>
					<div>
						<h3>{t('about.feature3Title', currentLocale)}</h3>
						<p>{t('about.feature3Text', currentLocale)}</p>
					</div>
				</div>

				<div class='feature-item'>
					<span class='feature-icon'>
						<svg
							xmlns='http://www.w3.org/2000/svg'
							viewBox='0 0 24 24'
							fill='currentColor'
						>
							<path
								d='M4 8h4V4H4v4zm6 12h4v-4h-4v4zm-6 0h4v-4H4v4zm0-6h4v-4H4v4zm6 0h4v-4h-4v4zm6-10v4h4V4h-4zm-6 4h4V4h-4v4zm6 6h4v-4h-4v4zm0 6h4v-4h-4v4z'
							></path>
						</svg>
					</span>
					<div>
						<h3>{t('about.feature4Title', currentLocale)}</h3>
						<p>{t('about.feature4Text', currentLocale)}</p>
					</div>
				</div>
			</div>
		</section>

		<!-- Community Section -->
		<section class='community-section'>
			<div class='community-content'>
				<h2>{t('about.communityTitle', currentLocale)}</h2>
				<p>{t('about.communityText', currentLocale)}</p>

				<div class='community-stats'>
					<div class='stat-item'>
						<span class='stat-number'>500+</span>
						<span class='stat-label'>{t('about.recipes', currentLocale)}</span>
					</div>
					<div class='stat-item'>
						<span class='stat-number'>50K+</span>
						<span class='stat-label'>{t('about.members', currentLocale)}</span>
					</div>
					<div class='stat-item'>
						<span class='stat-number'>10K+</span>
						<span class='stat-label'>{t('about.comments', currentLocale)}</span>
					</div>
					<div class='stat-item'>
						<span class='stat-number'>24/7</span>
						<span class='stat-label'>{t('about.support', currentLocale)}</span>
					</div>
				</div>

				<div class='cta-buttons'>
					<a href='/recipes' class='btn primary'>
						{t('about.exploreRecipes', currentLocale)}
					</a>
					<a href='/subscribe' class='btn secondary'>
						{t('about.subscribe', currentLocale)}
					</a>
				</div>
			</div>
		</section>

		<!-- Team Section -->
		<section class='team-section'>
			<h2 class='section-title'>{t('about.teamTitle', currentLocale)}</h2>
			<div class='team-grid'>
				<div class='team-member'>
					<div class='member-avatar'>
