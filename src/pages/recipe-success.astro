---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title='Recipe Submitted'>
	<div class='max-w-2xl mx-auto p-4 text-center'>
		<h1 class='text-3xl font-bold mb-6'>Recipe Submitted Successfully!</h1>
		<p class='mb-4'>Your recipe has been added to our collection.</p>
		<a
			href='/recipes'
			class='inline-flex justify-center rounded-md border border-transparent bg-indigo-600 py-2 px-4 text-sm font-medium text-white shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2'
		>
			View All Recipes
		</a>
	</div>
</BaseLayout>
