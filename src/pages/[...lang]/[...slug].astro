---
import BaseLayout from '../../layouts/BaseLayout.astro'; // Changed from '../../../layouts'
import Hero from '../../components/Hero.astro'; // Changed from '../../../components'
import { t } from '../../utils/i18n'; // Changed from '../../../utils'

const { lang = 'es' } = Astro.params;
const slug = Astro.params.slug || 'home';
const currentLocale = lang === 'en' ? 'en' : 'es';
---

<BaseLayout title={t('title', currentLocale)}>
	{slug === 'home' && <Hero />}
	<!-- Add other page components as needed -->
</BaseLayout>
