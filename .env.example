# =============================================================================
# Tasty Kitchen Recipes - Environment Variables
# =============================================================================
# Copy this file to .env and fill in your values.
# NEVER commit .env to version control (it's in .gitignore).
# =============================================================================

# -----------------------------------------------------------------------------
# FIREBASE - CLIENT (exposed to browser)
# -----------------------------------------------------------------------------
# These VITE_* vars are bundled into the client. Required for Firebase Auth.
# Security: apiKey identifies your project; Firebase security rules protect data.
VITE_FIREBASE_API_KEY=
VITE_FIREBASE_AUTH_DOMAIN=
VITE_FIREBASE_PROJECT_ID=
VITE_FIREBASE_STORAGE_BUCKET=
VITE_FIREBASE_MESSAGING_SENDER_ID=
VITE_FIREBASE_APP_ID=
VITE_FIREBASE_MEASUREMENT_ID=

# -----------------------------------------------------------------------------
# FIREBASE - SERVER (never exposed to client)
# -----------------------------------------------------------------------------
# Service account JSON for Firebase Admin SDK (verify tokens, etc.)
# Required in production. Optional in dev (falls back to applicationDefault).
FIREBASE_SERVICE_ACCOUNT={"type":"service_account","project_id":"...","private_key_id":"...","private_key":"...","client_email":"...","client_id":"...","auth_uri":"...","token_uri":"...","auth_provider_x509_cert_url":"...","client_x509_cert_url":"..."}
FIREBASE_PROJECT_ID=

# -----------------------------------------------------------------------------
# SANITY CMS - CLIENT (exposed to browser for read-only queries)
# -----------------------------------------------------------------------------
PUBLIC_SANITY_PROJECT_ID=
PUBLIC_SANITY_DATASET=
PUBLIC_SANITY_API_VERSION=2023-06-25
PUBLIC_SANITY_USE_CDN=true

# -----------------------------------------------------------------------------
# SANITY CMS - SERVER (never exposed to client)
# -----------------------------------------------------------------------------
# Required for mutations (create, update, delete)
SANITY_PROJECT_ID=
SANITY_DATASET=
SANITY_API_TOKEN=
SANITY_API_VERSION=2023-06-25
